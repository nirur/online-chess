/* Variables */
color-1 = #20232A
color-2 = #ACBEBE
color-3 = #F4F4EF
color-4 = #A01D26

/* Global Changes */
html, html body
  background-color: color-2
  color: color-1
section#only-content *, section#column-layout > :not(div)
  font-family: 'Roboto', 'Lato', 'Poppins', 'Montserrat' !important
  background-color: color-4
  color: color-3

/* Header Layout */
/* Fix for fonts due to W3.CSS */
h1, h2, h3, h4, h5, h6
  font-family: inherit
  font-weight: 300

/* Main Header Layouts */
html body header#top-bar
  position: sticky
  top: 0
  margin-bottom: 40px
  & *
    margin: 0
  & div#mainheader
    margin: 0
  & div#leftheaderlink
    display: inline
    position: fixed
    left: 0
    top: 0
    & a
      color: color-1
      text-decoration: none